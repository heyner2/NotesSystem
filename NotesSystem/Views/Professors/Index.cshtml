@model IEnumerable<NotesSystem.Models.Professor>

@{
    ViewData["Title"] = "Professors List";
}

<h1>Professors List</h1>
<hr />
<br />
<br />

<p>
    <a class="btn btn-info" asp-action="Create">Create New</a>

</p>
<hr />
<br />
@if (Model.Count() > 0 ){

<table border="1" class=" text-center">
    <thead>
        <tr>
            <th style="min-width:200px">
                @Html.DisplayNameFor(model => model.name)
            </th>
            <th style="min-width:200px">
                @Html.DisplayNameFor(model => model.email)
            </th>
            <th>
                Actions
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
        <tr>
            <td style="min-width:200px">
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td style="min-width:200px">
                @Html.DisplayFor(modelItem => item.email)
            </td>

            <td>
                <a class="btn btn-info" asp-action="Edit" asp-route-id="@item.idProfessor">Edit</a> |
                <a class="btn btn-info" asp-action="Details" asp-route-id="@item.idProfessor">Details</a> |
                <a class="btn btn-info" asp-action="Delete" asp-route-id="@item.idProfessor">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

}else{
<h1>No Professor in the list add one first</h1>
}
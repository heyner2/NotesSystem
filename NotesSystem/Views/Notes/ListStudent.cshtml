
@{
    ViewData["Title"] = "List of students";
}


<table id="table_id">

    <thead>
        <tr>
            <td>Name</td>
            <td>Age</td>
        </tr>
    </thead>
    <tbody>
    </tbody> 

</table>
@section scripts{
    <script>
        $(document).ready(function () {
            $("#table_id").DataTable({
                "processing": true,
                "serverSide": true,
                "ajax": {
                    "url": "@Url.Action("Json","Notes")",
                    "type": "POST",
                    "datatype": "json",
                },
                "pageLength": 10,
                "filter": true,
                "responsivePriority": 1,
                "data": null,
                "columns": [
                    { "data":"name", "name": "name", "autoWidth": true },
                    { "data":"age", "name": "age", "autoWidth": true }
                ]
            });
        });
    </script>

 }

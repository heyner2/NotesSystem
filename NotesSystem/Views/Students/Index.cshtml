@model IEnumerable<NotesSystem.Models.Student>

@{
    ViewData["Title"] = "Students List";
}

<h1>Students List</h1>
<hr />
<br />
<br />

<p>
    <a class="btn btn-info" asp-action="Create">Create New</a>
</p>
<hr />
<br />
@if (Model.Count() > 0 ){
<table border="1" class="text-center">
    <thead>
        <tr>
            <th style="min-width:200px">
                @Html.DisplayNameFor(model => model.name)
            </th>
            <th style="min-width:200px">
                @Html.DisplayNameFor(model => model.age)
            </th>
            <th>
                Actions
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
        <tr>
            <td style="min-width:200px">
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td style="min-width:200px">
                @Html.DisplayFor(modelItem => item.age)
            </td>
            <td>
                <a class="btn btn-info" asp-action="Edit" asp-route-id="@item.idStudent">Edit</a> |
                <a class="btn btn-info" asp-action="Details" asp-route-id="@item.idStudent">Details</a> |
                <a class="btn btn-info" asp-action="Delete" asp-route-id="@item.idStudent">Delete</a>
                <a class="btn btn-info" asp-controller="Notes" asp-action="View" asp-route-id="@item.idStudent">Add a note</a> |
                <a class="btn btn-info" asp-controller="Notes" asp-action="getNotes" asp-route-id="@item.idStudent">view notes</a> |
            </td>
        </tr>
}
    </tbody>
</table>

        }else{
<h1>No student in the list add one first</h1>
        }
